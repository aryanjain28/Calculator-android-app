<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/display"
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:cursorVisible="false"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="2"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="3"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="1"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="4"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="5"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="6"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="7"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="+"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="8"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="3"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="9"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="0"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="ClearAll"
            android:text="C"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonmul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="*"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="/"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="buttonPressed"
            android:text="-"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="388dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:width="120dp"
            android:height="70dp"
            android:background="#00911919"
            android:onClick="printAnswer"
            android:text="="
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_row="6" />


    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>